<!DOCTYPE html>
<html>
  <head>
    <title>RailsFlickrApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-dark bg-info">
      <div class="container">
        <%= link_to "Flickr Search", root_path, class: "navbar-brand" %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
